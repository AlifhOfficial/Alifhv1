{
  "name": "@alifh/shared",
  "version": "0.1.0",
  "private": true,
  "description": "Shared auth module and utilities",
  "packageManager": "bun@1.3.4",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./auth": "./dist/auth/index.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc && bun build ./src/index.ts ./src/auth/index.ts --outdir dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@types/winston": "^2.4.4",
    "winston": "^3.19.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.3"
  }
}
